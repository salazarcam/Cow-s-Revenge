extends Node2D

#Area de interaccion 
@onready var collision_area = $Area2D
var player_near = false

func _ready():
	collision_area.connect("body_entered", Callable (self, "_on_body_entered"))
	collision_area.connect("body exited", Callable(self, "_on_body_exited"))
func _on_body_entered(body):
	if body.name == "Franklin": 
		player_near = true
		print("Adiós")
func _process(_delta):
	if player_near and Input.is_action_just_pressed("ui_accept"):
		print("¡Ayúdame!")
		
